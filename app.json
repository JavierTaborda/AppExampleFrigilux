{
  "expo": {
    "name": "AppExampleFrigilux",
    "slug": "app-example-frigilux",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "appexamplefrigilux",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios", "android", "web"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.javierdevelop.appexamplefrigilux",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta app usa Face ID para autenticaci√≥n segura."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.javierdevelop.appexamplefrigilux",
      "versionCode": 1,
      "edgeToEdgeEnabled": true
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/splash.png",
            "backgroundColor": "#000000"
          },
          "android": {
            "statusBarTranslucent": true,
            "backgroundColor": "#ffffff",
            "navigationBarColor": "#ffffff"
          },
          "ios": {
            "backgroundColor": "#ffffff"
          }
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "a128c171-603d-4819-afda-be3da7fe86d1"
      }
    }
  }
}
